<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ReportesDePaqueteria.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ReportesDePaqueteria"
    Shell.FlyoutBehavior="Disabled"
    Title="ReportesDePaqueteria"
    xmlns:views="clr-namespace:ReportesDePaqueteria.MVVM.Views">

    <ShellContent
        Route="AuthLandingPage"
        ContentTemplate="{DataTemplate views:AuthLandingPage}" />

    <!-- Login -->
    <ShellContent
        Route="SignIn"
        ContentTemplate="{DataTemplate views:SignInView}" />

    <!-- Registro -->
    <ShellContent
        Route="SignUp"
        ContentTemplate="{DataTemplate views:SignUpView}" />

    <!-- Home -->
    <ShellContent
        Route="homepage"
        ContentTemplate="{DataTemplate views:HomePage}" />

</Shell>
