<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ReportesDePaqueteria.MVVM.Views.ChangePasswordPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Cambiar contraseña"
             BackgroundColor="#F5F6F8"
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#FF8302</Color>
            <Color x:Key="TextDark">#111827</Color>
            <Color x:Key="TextLight">#6B7280</Color>
            <Color x:Key="CardBg">#FFFFFF</Color>

            <Style TargetType="Label" x:Key="H1">
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>
            <Style TargetType="Frame" x:Key="Card">
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Margin" Value="0,10"/>
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="HasShadow" Value="True"/>
            </Style>
            <Style TargetType="Button" x:Key="PrimaryButton">
                <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="16,12"/>
            </Style>
            <Style TargetType="Button" x:Key="FlatButton">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="{StaticResource Primary}"/>
                <Setter Property="Padding" Value="10,8"/>
            </Style>
            <Style TargetType="Label" x:Key="Hint">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="TextColor" Value="{StaticResource TextLight}"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Grid Grid.Row="0" Padding="20,20,20,14">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF9F3A" Offset="0"/>
                    <GradientStop Color="#FF8302" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                <Label Text="Cambiar contraseña" Style="{StaticResource H1}"/>
                <Button Grid.Column="1" Text="Cerrar" Style="{StaticResource FlatButton}"
                TextColor="White" Clicked="OnCloseClicked"/>
            </Grid>
        </Grid>

        <!-- Contenido -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="10">

                <Frame Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="8">

                        <!-- Actual -->
                        <Label Text="Contraseña actual" />
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                            <Entry x:Name="OldPwd" IsPassword="{Binding OldHidden}" />
                            <Button Grid.Column="1" Text="{Binding OldToggleText}" Clicked="OnToggleOld"/>
                        </Grid>

                        <!-- Nueva -->
                        <Label Text="Nueva contraseña" />
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                            <Entry x:Name="NewPwd" IsPassword="{Binding NewHidden}" TextChanged="OnNewPwdTextChanged"
                     Placeholder="Mínimo 8 caracteres" />
                            <Button Grid.Column="1" Text="{Binding NewToggleText}" Clicked="OnToggleNew"/>
                        </Grid>

                        <!-- Fortaleza -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                            <Label Text="Fortaleza" Style="{StaticResource Hint}"/>
                            <ProgressBar Grid.Column="1" x:Name="StrengthBar" Progress="0"/>
                        </Grid>
                        <Label x:Name="StrengthText" Style="{StaticResource Hint}" Text="Débil"/>

                        <!-- Confirmar -->
                        <Label Text="Confirmar nueva" />
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                            <Entry x:Name="NewPwd2" IsPassword="{Binding New2Hidden}" />
                            <Button Grid.Column="1" Text="{Binding New2ToggleText}" Clicked="OnToggleNew2"/>
                        </Grid>

                        <!-- Error -->
                        <Label x:Name="ErrorMsg" TextColor="#B91C1C" FontSize="12" IsVisible="False"/>

                        <!-- Acciones -->
                        <Grid ColumnDefinitions="*,Auto" Margin="0,6,0,0">
                            <Label Text="Usa al menos 8 caracteres." Style="{StaticResource Hint}"/>
                            <Button Grid.Column="1" Text="Actualizar" Style="{StaticResource PrimaryButton}"
                      Clicked="OnUpdateClicked"/>
                        </Grid>

                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
