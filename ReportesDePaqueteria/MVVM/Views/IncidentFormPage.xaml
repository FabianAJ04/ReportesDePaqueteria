<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ReportesDePaqueteria.MVVM.Views.IncidentFormPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:ReportesDePaqueteria.Converters"
             Title="Reportar incidencia"
             BackgroundColor="#F5F6F8">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#FF8302</Color>
            <Color x:Key="TextDark">#111827</Color>
            <Color x:Key="TextLight">#6B7280</Color>
            <Color x:Key="CardBg">#FFFFFF</Color>

            <Style TargetType="Frame" x:Key="Card">
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Margin" Value="12,10"/>
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="HasShadow" Value="True"/>
            </Style>

            <Style TargetType="Button" x:Key="PrimaryButton">
                <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="14,12"/>
            </Style>

            <Style TargetType="Button" x:Key="FlatButton">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="{StaticResource Primary}"/>
                <Setter Property="Padding" Value="10,8"/>
            </Style>

            <Style TargetType="Label" x:Key="Hint">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="TextColor" Value="{StaticResource TextLight}"/>
            </Style>

            <!-- Converter 1..4 <-> 0..3 -->
            <conv:IntMinusOneConverter x:Key="IntMinusOneConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="6">

            <!-- Envío (del modelo) -->
            <Frame Style="{StaticResource Card}">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Envío" FontAttributes="Bold"/>
                    <Label Text="{Binding Incident.ShipmentCode}" TextColor="{StaticResource TextDark}"/>
                    <Label Text="{Binding Shipment.ReceiverName, StringFormat='Destinatario: {0}'}"
               Style="{StaticResource Hint}"/>
                    <Label Text="{Binding Shipment.CreatedDate, StringFormat='Creado: {0:dd/MM/yyyy HH:mm}'}"
               Style="{StaticResource Hint}"/>
                </VerticalStackLayout>
            </Frame>

            <Frame Style="{StaticResource Card}">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Creado por (Id)" FontAttributes="Bold"/>
                    <Label Text="{Binding Incident.CreatedById}" TextColor="{StaticResource TextDark}"/>
                    <Label Text="*Se rellena con tu user_id de SecureStorage" Style="{StaticResource Hint}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Título / Descripción -->
            <Frame Style="{StaticResource Card}">
                <VerticalStackLayout Spacing="10">
                    <Entry Placeholder="Título del incidente" Text="{Binding Incident.Title}"/>
                    <Editor Placeholder="Describe el problema…" AutoSize="TextChanges"
                            Text="{Binding Incident.Description}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Estado / Prioridad / Categoría  -->
            <Frame Style="{StaticResource Card}">
                <VerticalStackLayout Spacing="10">

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout>
                            <Label Text="Estado" FontAttributes="Bold"/>
                            <Picker ItemsSource="{Binding StatusOptions}"
                                    SelectedIndex="{Binding Incident.Status, Converter={StaticResource IntMinusOneConverter}}"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Prioridad" FontAttributes="Bold"/>
                            <Picker ItemsSource="{Binding PriorityOptions}"
                                    SelectedIndex="{Binding Incident.Priority, Converter={StaticResource IntMinusOneConverter}}"/>
                        </VerticalStackLayout>
                    </Grid>

                    <VerticalStackLayout>
                        <Label Text="Categoría" FontAttributes="Bold"/>
                        <Picker ItemsSource="{Binding CategoryOptions}"
                                SelectedIndex="{Binding Incident.Category, Converter={StaticResource IntMinusOneConverter}}"/>
                    </VerticalStackLayout>

                    <Label Text="* Los selectores usan índices 0..3; el modelo guarda 1..4"
                           Style="{StaticResource Hint}" />

                </VerticalStackLayout>
            </Frame>

            <!-- Acciones -->
            <Grid ColumnDefinitions="*,Auto" Margin="0,4,0,16">
                <Button Text="Guardar" Style="{StaticResource PrimaryButton}" Command="{Binding SaveCommand}"/>
                <Button Grid.Column="1" Text="Cancelar" Style="{StaticResource FlatButton}" Command="{Binding BackCommand}"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
