<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReportesDePaqueteria.MVVM.Views.SignUpView"
             Title="Registro"
             BackgroundColor="#F5F6F8"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header naranja -->
        <Grid Grid.Row="0" Padding="20,28" >
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF9F3A" Offset="0"/>
                    <GradientStop Color="#FF8302" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Label Text="Crear cuenta"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>
        </Grid>

        <!-- Contenido -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="16">

                <Label Text="{Binding ErrorMessage}"
                       TextColor="#EF4444"
                       IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"/>

                <!-- Nombre -->
                <Frame Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Nombre"
                               FontSize="14"
                               TextColor="{StaticResource TextLight}"/>
                        <Entry Placeholder="Tu nombre completo"
                               Text="{Binding Name}"
                               BackgroundColor="Transparent"
                               TextColor="{StaticResource TextDark}"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Email -->
                <Frame Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Correo electrónico"
                               FontSize="14"
                               TextColor="{StaticResource TextLight}"/>
                        <Entry Placeholder="tucorreo@ejemplo.com"
                               Text="{Binding Email}"
                               Keyboard="Email"
                               BackgroundColor="Transparent"
                               TextColor="{StaticResource TextDark}"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Username -->
                <Frame Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Usuario"
                               FontSize="14"
                               TextColor="{StaticResource TextLight}"/>
                        <Entry Placeholder="Nombre de usuario"
                               Text="{Binding Username}"
                               BackgroundColor="Transparent"
                               TextColor="{StaticResource TextDark}"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Password -->
                <Frame Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Contraseña"
                               FontSize="14"
                               TextColor="{StaticResource TextLight}"/>
                        <Entry Placeholder="Mínimo 6 caracteres"
                               Text="{Binding Password}"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               TextColor="{StaticResource TextDark}"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Botón principal -->
                <Button Text="Registrarme"
                        Command="{Binding SignUpCommand}"
                        Style="{StaticResource PrimaryButton}"
                        HeightRequest="50"/>

                <!-- Cargando -->
                <ActivityIndicator IsVisible="{Binding IsBusy}"
                                   IsRunning="{Binding IsBusy}" />

                <!-- Link a inicio de sesión -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="6" Margin="0,6,0,20">
                    <Label Text="¿Ya tienes una cuenta?"
                           TextColor="{StaticResource TextLight}"/>
                    <Label Text="Inicia sesión"
                           TextColor="{StaticResource Primary}"
                           FontAttributes="Bold">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateSignInCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
