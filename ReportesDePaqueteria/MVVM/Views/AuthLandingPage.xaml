<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ReportesDePaqueteria.MVVM.Views.AuthLandingPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Bienvenido"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Transparent">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#FF8302</Color>
            <Color x:Key="PrimaryDark">#FF6F00</Color>
            <Color x:Key="PrimaryLight">#FFA942</Color>
            <Color x:Key="TextOnPrimary">#FFFFFF</Color>
            <Color x:Key="TextMuted">#FFFFFFCC</Color>

            <Style TargetType="Label" x:Key="H1">
                <Setter Property="FontSize" Value="26"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource TextOnPrimary}"/>
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
            </Style>

            <Style TargetType="Button" x:Key="PillButton">
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="Padding" Value="24,14"/>
                <Setter Property="FontSize" Value="18"/>
            </Style>

            <Style TargetType="Button" x:Key="RoundButton">
                <Setter Property="WidthRequest" Value="44"/>
                <Setter Property="HeightRequest" Value="44"/>
                <Setter Property="CornerRadius" Value="22"/>
                <Setter Property="BackgroundColor" Value="#FFFFFF"/>
                <Setter Property="TextColor" Value="{StaticResource Primary}"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                <GradientStop Color="{StaticResource PrimaryLight}" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid RowDefinitions="Auto,*,Auto,Auto,Auto" Padding="24">

            <BoxView HeightRequest="10" Opacity="0" />

            <VerticalStackLayout Grid.Row="1" Spacing="16" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="box.png" HeightRequest="120" WidthRequest="120" Margin="0,8"
               HorizontalOptions="Center" />

                <Label Text="App"
               Style="{StaticResource H1}" />
                <Label Text="Paqueteria" Style="{StaticResource H1}" FontSize="18" />
            </VerticalStackLayout>

            <Button Grid.Row="2"
              Text="Login"
              Style="{StaticResource PillButton}"
              BackgroundColor="#FF5F43" TextColor="White"
              Clicked="OnLoginClicked"
              Margin="16,0"
              HorizontalOptions="Center" />

            <Button Grid.Row="3"
              Text="Sign up"
              Style="{StaticResource PillButton}"
              BackgroundColor="#FFFFFF"
              TextColor="{StaticResource Primary}"
              Margin="16,8,16,0"
              HorizontalOptions="Center" />

       

        </Grid>
    </Grid>
</ContentPage>
