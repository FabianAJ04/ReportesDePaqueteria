<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ReportesDePaqueteria.MVVM.Views.ShipmentListPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Name="ThisPage"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Envíos"
             BackgroundColor="#F5F6F8">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#FF8302</Color>
            <Color x:Key="TextDark">#111827</Color>
            <Color x:Key="TextLight">#6B7280</Color>
            <Color x:Key="CardBg">#FFFFFF</Color>
            <Color x:Key="ChipBg">#E5E7EB</Color>

            <Style TargetType="Label" x:Key="H1">
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource TextDark}"/>
            </Style>
            <Style TargetType="Frame" x:Key="Card">
                <Setter Property="Padding" Value="12"/>
                <Setter Property="Margin" Value="0,6"/>
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}"/>
                <Setter Property="CornerRadius" Value="14"/>
                <Setter Property="HasShadow" Value="True"/>
            </Style>
            <Style TargetType="Frame" x:Key="Chip">
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="HasShadow" Value="False"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="BackgroundColor" Value="{StaticResource ChipBg}"/>
            </Style>
            <Style TargetType="Button" x:Key="PrimaryButton">
                <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="14,12"/>
            </Style>
            <Style TargetType="Button" x:Key="FlatButton">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="{StaticResource Primary}"/>
                <Setter Property="Padding" Value="8,6"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="10">

            <Button Grid.Column="1"
        Text="Nuevo envío"
        Style="{StaticResource PrimaryButton}"
        Command="{Binding NewCommand}" />


            <!-- Buscar -->
            <SearchBar Placeholder="Buscar por código o destinatario…"
                       Text="{Binding Search}" />

            <!-- Filtro de estado (SelectedIndex -> StatusFilter del VM) -->
            <Picker Title="Estado"
                    SelectedIndex="{Binding StatusFilter}">
                <Picker.Items>
                    <x:String>Todos</x:String>
                    <x:String>Enviado</x:String>
                    <x:String>En tránsito</x:String>
                    <x:String>Entregado</x:String>
                    <x:String>Cancelado</x:String>
                    <x:String>Con incidente</x:String>
                </Picker.Items>
            </Picker>

            <!-- Lista -->
            <CollectionView ItemsSource="{Binding ViewItems}" SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="24" Spacing="6" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="Sin envíos" FontAttributes="Bold"/>
                        <Label Text="Crea un nuevo envío para comenzar." TextColor="{StaticResource TextLight}"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource Card}">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10">

                                <!-- Encabezado: Code + Status -->
                                <HorizontalStackLayout Grid.ColumnSpan="2" Spacing="8">
                                    <Label Text="{Binding Code}" FontAttributes="Bold" FontSize="16"/>
                                    <Frame Style="{StaticResource Chip}">
                                        <!-- Muestra el int de Status tal cual; si quieres texto bonito, luego hacemos un converter -->
                                        <Label Text="{Binding Status}" FontSize="12"/>
                                    </Frame>
                                </HorizontalStackLayout>

                                <!-- Resumen: destinatario -->
                                <Label Grid.Row="1" Grid.ColumnSpan="2"
                                       Text="{Binding ReceiverName}"
                                       TextColor="{StaticResource TextLight}"/>

                                <!-- Fecha + acciones -->
                                <Grid Grid.Row="2" ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                    <Label Text="{Binding CreatedDate, StringFormat='Creado: {0:dd/MM/yyyy}'}"
           TextColor="{StaticResource TextLight}" />
                                    <HorizontalStackLayout Grid.Column="1" Spacing="8">
                                        <Button Text="Ver"
                Style="{StaticResource FlatButton}"
                Command="{Binding Source={x:Reference ThisPage}, Path=BindingContext.OpenCommand}"
                CommandParameter="{Binding .}" />
                                    </HorizontalStackLayout>
                                </Grid>


                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <ContentView x:Name="__root" IsVisible="False"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
