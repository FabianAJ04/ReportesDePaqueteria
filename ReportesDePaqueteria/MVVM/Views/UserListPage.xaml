<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ReportesDePaqueteria.MVVM.Views.UserListPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Usuarios">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#FF8302</Color>
            <Color x:Key="TextDark">#111827</Color>
            <Color x:Key="TextLight">#6B7280</Color>
            <Color x:Key="CardBg">#FFFFFF</Color>
            <Color x:Key="ChipBg">#E5E7EB</Color>

            <Style TargetType="Label" x:Key="TitleLabel">
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource TextDark}"/>
            </Style>

            <Style TargetType="Frame" x:Key="Card">
                <Setter Property="Padding" Value="12"/>
                <Setter Property="Margin" Value="0,6"/>
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}"/>
                <Setter Property="CornerRadius" Value="14"/>
                <Setter Property="HasShadow" Value="True"/>
            </Style>

            <Style TargetType="Frame" x:Key="Chip">
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="HasShadow" Value="False"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="BackgroundColor" Value="{StaticResource ChipBg}"/>
            </Style>

            <Style TargetType="Button" x:Key="PrimaryButton">
                <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Padding" Value="16,12"/>
            </Style>

            <Style TargetType="Button" x:Key="FlatButton">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="{StaticResource Primary}"/>
                <Setter Property="Padding" Value="8,6"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="8">

            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,6">
                <Label Text="Usuarios" Style="{StaticResource TitleLabel}"/>
                <Button Grid.Column="1" Text="Nuevo" Style="{StaticResource PrimaryButton}" Clicked="OnNuevoClicked"/>
            </Grid>

            <SearchBar Placeholder="Buscar por nombre o correoâ€¦" Text="{Binding SearchText}" />
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Picker Title="Rol" ItemsSource="{Binding Roles}" SelectedItem="{Binding RolSel}"/>
                <Picker Title="Estado" Grid.Column="1" ItemsSource="{Binding Estados}" SelectedItem="{Binding EstadoSel}"/>
            </Grid>

            <Grid ColumnDefinitions="*,Auto" Margin="0,4,0,12">
                <Button Text="Aplicar filtros" Style="{StaticResource PrimaryButton}"/>
                <Button Grid.Column="1" Text="Limpiar" Style="{StaticResource FlatButton}"/>
            </Grid>

            <CollectionView ItemsSource="{Binding Usuarios}" SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="24" Spacing="6" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="Sin usuarios" FontAttributes="Bold" />
                        <Label Text="Crea un usuario nuevo para comenzar." TextColor="{StaticResource TextLight}" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource Card}">
                            <Grid ColumnDefinitions="*,Auto" RowSpacing="4">
                                <VerticalStackLayout>
                                    <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                                    <Label Text="{Binding Correo}" TextColor="{StaticResource TextLight}" />

                                    <HorizontalStackLayout Spacing="8" Margin="0,6,0,0">
                                        <Frame Style="{StaticResource Chip}">
                                            <Label Text="{Binding Rol}" FontSize="12"/>
                                        </Frame>
                                        <Frame Style="{StaticResource Chip}">
                                            <Label Text="{Binding Estado}" FontSize="12"/>
                                        </Frame>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <HorizontalStackLayout Grid.Column="1" Spacing="8" VerticalOptions="Center">
                                    <Button Text="Editar" Style="{StaticResource FlatButton}" Clicked="OnEditarClicked" CommandParameter="{Binding .}"/>
                                    <Button Text="Desactivar" Style="{StaticResource FlatButton}" Clicked="OnDesactivarClicked" CommandParameter="{Binding .}"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
