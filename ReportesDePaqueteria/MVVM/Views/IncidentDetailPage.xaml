<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ReportesDePaqueteria.MVVM.Views.IncidentDetailPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="ThisPage"
             Title="Detalle del incidente"
             BackgroundColor="#F5F6F8">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Paleta -->
            <Color x:Key="Primary">#FF8302</Color>
            <Color x:Key="PrimaryDark">#CC6800</Color>
            <Color x:Key="TextDark">#111827</Color>
            <Color x:Key="TextLight">#6B7280</Color>
            <Color x:Key="CardBg">#FFFFFF</Color>
            <Color x:Key="OkBg">#DCFCE7</Color>
            <Color x:Key="WarnBg">#FEF3C7</Color>
            <Color x:Key="ErrBg">#FEE2E2</Color>
            <Color x:Key="ChipBg">#E5E7EB</Color>

            <!-- Tipografía -->
            <Style TargetType="Label" x:Key="H1">
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>
            <Style TargetType="Label" x:Key="Section">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Margin" Value="0,12,0,8"/>
                <Setter Property="TextColor" Value="{StaticResource TextDark}"/>
            </Style>
            <Style TargetType="Label" x:Key="Hint">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="TextColor" Value="{StaticResource TextLight}"/>
            </Style>

            <!-- Contenedores -->
            <Style TargetType="Frame" x:Key="Card">
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Margin" Value="0,8"/>
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="HasShadow" Value="True"/>
            </Style>
            <Style TargetType="Frame" x:Key="Chip">
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="HasShadow" Value="False"/>
                <Setter Property="BackgroundColor" Value="{StaticResource ChipBg}"/>
            </Style>

            <!-- Controles -->
            <Style TargetType="Button" x:Key="PrimaryButton">
                <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="14,12"/>
            </Style>
            <Style TargetType="Button" x:Key="FlatButton">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="{StaticResource Primary}"/>
                <Setter Property="Padding" Value="10,8"/>
            </Style>
            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="{StaticResource TextDark}"/>
                <Setter Property="PlaceholderColor" Value="{StaticResource TextLight}"/>
            </Style>
            <Style TargetType="Editor">
                <Setter Property="AutoSize" Value="TextChanges"/>
                <Setter Property="HeightRequest" Value="140"/>
                <Setter Property="TextColor" Value="{StaticResource TextDark}"/>
                <Setter Property="PlaceholderColor" Value="{StaticResource TextLight}"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- HEADER -->
        <Grid Grid.Row="0" Padding="16,18,16,14">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF9F3A" Offset="0"/>
                    <GradientStop Color="{StaticResource Primary}" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="10">
                <!-- Back -->
                <Button Text="←"
                        Command="{Binding BackCommand}"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="20"
                        Padding="0,2"
                        WidthRequest="32"/>

                <Entry Grid.Column="1"
                       Text="{Binding Title}"
                       Placeholder="Título del incidente"
                       FontSize="18"
                       TextColor="White"
                       PlaceholderColor="#FFFFFFAA"
                       HorizontalOptions="Fill"
                       BackgroundColor="Transparent"/>

                <!-- Fecha -->
                <Label Grid.Column="2"
                       Text="{Binding Fecha, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                       HorizontalTextAlignment="End"
                       VerticalOptions="Center"
                       TextColor="#FFFFFFCC"
                       FontSize="12"/>

                <!-- Chips -->
                <HorizontalStackLayout Grid.Row="1" Grid.ColumnSpan="3" Spacing="8">
                    <Frame Style="{StaticResource Chip}">
                        <Label Text="{Binding EstadoText}" FontSize="12"/>
                        <Frame.Triggers>
                            <DataTrigger TargetType="Frame" Binding="{Binding EstadoText}" Value="Abierto">
                                <Setter Property="BackgroundColor" Value="{StaticResource ErrBg}"/>
                            </DataTrigger>
                            <DataTrigger TargetType="Frame" Binding="{Binding EstadoText}" Value="En progreso">
                                <Setter Property="BackgroundColor" Value="{StaticResource WarnBg}"/>
                            </DataTrigger>
                            <DataTrigger TargetType="Frame" Binding="{Binding EstadoText}" Value="Resuelto">
                                <Setter Property="BackgroundColor" Value="{StaticResource OkBg}"/>
                            </DataTrigger>
                            <DataTrigger TargetType="Frame" Binding="{Binding EstadoText}" Value="Cerrado">
                                <Setter Property="BackgroundColor" Value="#E5E7EB"/>
                            </DataTrigger>
                        </Frame.Triggers>
                    </Frame>

                    <Frame Style="{StaticResource Chip}">
                        <Label Text="{Binding PrioridadText}" FontSize="12"/>
                    </Frame>

                    <Frame Style="{StaticResource Chip}">
                        <Label Text="{Binding CategoriaText}" FontSize="12"/>
                    </Frame>

                    <Frame Style="{StaticResource Chip}">
                        <Label Text="{Binding ResponsableText, StringFormat='Asignado: {0}'}" FontSize="12"/>
                    </Frame>

                    <Frame Style="{StaticResource Chip}">
                        <Label Text="{Binding ShipmentCode, StringFormat='Envío: {0}'}" FontSize="12"/>
                    </Frame>
                </HorizontalStackLayout>
            </Grid>
        </Grid>

        <!-- CONTENIDO -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="16" Spacing="8">

                <!-- Descripción -->
                <Frame Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Descripción" Style="{StaticResource Section}"/>
                        <Editor Placeholder="Describe el incidente…"
                                Text="{Binding Description}"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Estado rápido -->
                <Frame Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Cambiar estado" Style="{StaticResource Section}"/>
                        <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="8">
                            <Button Text="Abierto" Grid.Column="0"
                                    Style="{StaticResource FlatButton}"
                                    Command="{Binding SetStatusCommand}" CommandParameter="1"/>
                            <Button Text="En progreso" Grid.Column="1"
                                    Style="{StaticResource FlatButton}"
                                    Command="{Binding SetStatusCommand}" CommandParameter="2"/>
                            <Button Text="Resuelto" Grid.Column="2"
                                    Style="{StaticResource FlatButton}"
                                    Command="{Binding SetStatusCommand}" CommandParameter="3"/>
                            <Button Text="Cerrado" Grid.Column="3"
                                    Style="{StaticResource FlatButton}"
                                    Command="{Binding SetStatusCommand}" CommandParameter="4"/>
                        </Grid>
                        <Label Text="Puedes actualizar el estado con un toque." Style="{StaticResource Hint}"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Prioridad / Categoría -->
                <Frame Style="{StaticResource Card}">
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <VerticalStackLayout>
                            <Label Text="Prioridad" Style="{StaticResource Section}"/>
                            <Picker ItemsSource="{Binding PriorityOptions}"
                                    SelectedIndex="{Binding SelectedPriorityIndex}"
                                    Title="Selecciona prioridad"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Categoría" Style="{StaticResource Section}"/>
                            <Picker ItemsSource="{Binding CategoryOptions}"
                                    SelectedIndex="{Binding SelectedCategoryIndex}"
                                    Title="Selecciona categoría"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Asignación -->
                <Frame Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Asignación" Style="{StaticResource Section}"/>
                        <Picker Title="Responsable"
                                ItemsSource="{Binding Users}"
                                ItemDisplayBinding="{Binding Name}"
                                SelectedItem="{Binding SelectedAssignee}"/>
                        <Label Text="Selecciona un responsable y pulsa Guardar." Style="{StaticResource Hint}"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <!-- FOOTER ACCIONES -->
        <Grid Grid.Row="2" Padding="16" ColumnDefinitions="*,Auto,Auto" BackgroundColor="#FFFFFFFF">
            <Button Text="Guardar"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding SaveCommand}"/>
            <Button Grid.Column="1"
                    Text="Ir al envío"
                    Style="{StaticResource FlatButton}"
                    Command="{Binding GoToShipmentCommand}"/>
            <Button Grid.Column="2"
                    Text="Eliminar"
                    Style="{StaticResource FlatButton}"
                    TextColor="#B91C1C"
                    Command="{Binding DeleteCommand}"/>
        </Grid>
    </Grid>
</ContentPage>
