<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ReportesDePaqueteria.MVVM.Views.IncidentListPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:flex="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
             x:Name="ThisPage"
             Title="Incidentes"
             BackgroundColor="#F5F6F8"
             Shell.NavBarIsVisible="True">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#FF8302</Color>
            <Color x:Key="TextDark">#111827</Color>
            <Color x:Key="TextLight">#6B7280</Color>
            <Color x:Key="CardBg">#FFFFFF</Color>
            <Color x:Key="ChipBg">#E5E7EB</Color>

            <Style TargetType="Label" x:Key="H1">
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource TextDark}"/>
            </Style>

            <Style TargetType="Frame" x:Key="Card">
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Margin" Value="0,8"/>
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}"/>
                <Setter Property="CornerRadius" Value="14"/>
                <Setter Property="HasShadow" Value="True"/>
            </Style>

            <Style TargetType="Frame" x:Key="Chip">
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="HasShadow" Value="False"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="BackgroundColor" Value="{StaticResource ChipBg}"/>
                <Setter Property="Margin" Value="0,4,8,0"/>
            </Style>

            <Style TargetType="Button" x:Key="FlatButton">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="{StaticResource Primary}"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">

            <Grid ColumnDefinitions="*,Auto">
                <Label Text="Incidentes" Style="{StaticResource H1}" />
                <Button Grid.Column="1"
                        Text="Inicio"
                        Style="{StaticResource FlatButton}"
                        Clicked="OnHomeClicked"/>
            </Grid>

            <SearchBar Placeholder="Buscar por palabra clave…"
                       Margin="0,0,0,4"
                       Text="{Binding SearchText}" />
            <!-- Filtros -->
            <HorizontalStackLayout Spacing="8" Margin="0,0,0,8">
                <Picker Title="Estado"
                        ItemsSource="{Binding Estados}"
                        SelectedItem="{Binding EstadoSel}" 
                        WidthRequest="120"/>
                <Picker Title="Prioridad"
                        ItemsSource="{Binding Prioridades}"
                        SelectedItem="{Binding PrioridadSel}" 
                        WidthRequest="120"/>
                <Picker Title="Categoría"
                        ItemsSource="{Binding Categorias}"
                        SelectedItem="{Binding CategoriaSel}" 
                        WidthRequest="120"/>
            </HorizontalStackLayout>    


            <CollectionView ItemsSource="{Binding Incidentes}" SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="8"/>
                </CollectionView.ItemsLayout>

                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="24" Spacing="6" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="Sin incidentes" FontAttributes="Bold"/>
                        <Label Text="Intenta con otra palabra clave." TextColor="{StaticResource TextLight}"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource Card}">
                            <!-- Mantener el tap gesture normal - la validación se hace en el ViewModel -->
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.OpenCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>

                            <Grid ColumnDefinitions="*,Auto"
                                  RowDefinitions="Auto,Auto,Auto,Auto"
                                  ColumnSpacing="12">

                                <!-- Título -->
                                <Label Grid.ColumnSpan="2"
                                       Text="{Binding Title}"
                                       FontAttributes="Bold"
                                       FontSize="16"/>

                                <!-- Chips con wrap -->
                                <flex:FlexLayout Grid.Row="1" Grid.ColumnSpan="2"
                                                 Direction="Row" Wrap="Wrap" AlignItems="Center" AlignContent="Start">
                                    <!-- Status -->
                                    <Frame Style="{StaticResource Chip}">
                                        <Label FontSize="12"
                                               Text="{Binding Status, Converter={StaticResource StatusConverter}, StringFormat='Estado: {0}'}"/>
                                        <Frame.Triggers>
                                            <DataTrigger TargetType="Frame" Binding="{Binding Status}" Value="1">
                                                <Setter Property="BackgroundColor" Value="#FEE2E2"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Frame" Binding="{Binding Status}" Value="2">
                                                <Setter Property="BackgroundColor" Value="#FEF3C7"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Frame" Binding="{Binding Status}" Value="3">
                                                <Setter Property="BackgroundColor" Value="#DCFCE7"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Frame" Binding="{Binding Status}" Value="4">
                                                <Setter Property="BackgroundColor" Value="#E5E7EB"/>
                                            </DataTrigger>
                                        </Frame.Triggers>
                                    </Frame>

                                    <!-- Prioridad -->
                                    <Frame Style="{StaticResource Chip}">
                                        <Label FontSize="12"
                                               Text="{Binding Priority, Converter={StaticResource OptionConverter}, StringFormat='Prioridad: {0}'}"/>
                                        <Frame.Triggers>
                                            <DataTrigger TargetType="Frame" Binding="{Binding Priority}" Value="1">
                                                <Setter Property="BackgroundColor" Value="#DCFCE7"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Frame" Binding="{Binding Priority}" Value="2">
                                                <Setter Property="BackgroundColor" Value="#FEF3C7"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Frame" Binding="{Binding Priority}" Value="3">
                                                <Setter Property="BackgroundColor" Value="#FEE2E2"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Frame" Binding="{Binding Priority}" Value="4">
                                                <Setter Property="BackgroundColor" Value="#FECACA"/>
                                            </DataTrigger>
                                        </Frame.Triggers>
                                    </Frame>

                                    <!-- Categoría -->
                                    <Frame Style="{StaticResource Chip}">
                                        <Label FontSize="12"
                                               Text="{Binding Category, Converter={StaticResource OptionConverter}, StringFormat='Categoría: {0}'}"/>
                                    </Frame>
                                </flex:FlexLayout>

                                <!-- Descripción -->
                                <Label Grid.Row="2" Grid.ColumnSpan="2"
                                       Margin="0,4,0,0"
                                       Text="{Binding Description}"
                                       TextColor="{StaticResource TextLight}"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2"/>

                                <!-- Fecha + Asignado / Acción -->
                                <Grid Grid.Row="3" ColumnDefinitions="*,Auto" ColumnSpacing="12" Margin="0,6,0,0">
                                    <VerticalStackLayout Spacing="2">
                                        <Label Text="{Binding DateTime, StringFormat='{0:dd/MM/yyyy}'}"
                                               FontSize="12" TextColor="{StaticResource TextLight}"/>
                                        <Label Text="{Binding Assignee.Name, StringFormat='Asig.: {0}'}"
                                               FontSize="12" TextColor="{StaticResource TextLight}"/>
                                    </VerticalStackLayout>

                                    <!-- CAMBIO PRINCIPAL: Botón "Ver" solo visible para Admin y Trabajador -->
                                    <Button Grid.Column="1"
                                            Text="Ver"
                                            Style="{StaticResource FlatButton}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.OpenCommand}"
                                            CommandParameter="{Binding .}"
                                            IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CanViewDetails}" />
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <ContentView x:Name="__root" IsVisible="False"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>