<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReportesDePaqueteria.MVVM.Views.SignInView"
             Title="Iniciar sesión"
             BackgroundColor="#F5F6F8"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">

            <!-- Logo o título -->
            <Label Text="Reportes de Paquetería"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}"
                   Margin="0,20,0,30"/>

            <!-- Correo -->
            <Frame Style="{StaticResource Card}">
                <VerticalStackLayout>
                    <Label Text="Correo electrónico"
                           FontSize="14"
                           TextColor="{StaticResource TextLight}"
                           Margin="0,0,0,4"/>
                    <Entry Placeholder="Ingresa tu correo"
                           Text="{Binding Email}"
                           Keyboard="Email"
                           BackgroundColor="Transparent"
                           TextColor="{StaticResource TextDark}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Contraseña -->
            <Frame Style="{StaticResource Card}">
                <VerticalStackLayout>
                    <Label Text="Contraseña"
                           FontSize="14"
                           TextColor="{StaticResource TextLight}"
                           Margin="0,0,0,4"/>
                    <Entry Placeholder="Ingresa tu contraseña"
                           Text="{Binding Password}"
                           IsPassword="True"
                           BackgroundColor="Transparent"
                           TextColor="{StaticResource TextDark}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Botón principal -->
            <Button Text="Iniciar sesión"
                    Command="{Binding SignInCommand}"
                    Style="{StaticResource PrimaryButton}"
                    Margin="0,10,0,0"/>

            <!-- Enlace a registro -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="4">
                <Label Text="¿No tienes una cuenta?"
                       TextColor="{StaticResource TextLight}"/>
                <Label Text="Regístrate"
                       TextColor="{StaticResource Primary}"
                       FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateSignUpCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
